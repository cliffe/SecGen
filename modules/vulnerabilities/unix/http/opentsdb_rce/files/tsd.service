[Unit]
Description=Opentsdb tsd Service
After=network.target

[Service]
User=root
Environment="PATH=/usr/local/bin:/usr/bin:/bin:/usr/local/games:/usr/games:/usr/share/opentsdb/bin/"
WorkingDirectory=/usr/share/opentsdb/bin/
ExecStart=/usr/share/opentsdb/bin/tsdb tsd
Restart=on-abort
RestartSec=1

[Install]
WantedBy=multi-user.target