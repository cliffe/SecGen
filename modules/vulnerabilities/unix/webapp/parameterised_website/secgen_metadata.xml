    <generator type="company_name"/>
  </default_input>

  <default_input into="company_motto">
    <generator type="motto"/>
  </default_input>

  <default_input into="manager_profile">
    <generator type="person">
      <input into="name">
        <generator type="name_generator"/>
      </input>
      <input into="address">
        <generator type="address_generator"/>
      </input>
      <input into="phone_number">
        <generator type="phone_number_generator"/>
      </input>
      <input into="email_address">
        <generator type="email_address"/>
      </input>
    </generator>
  </default_input>

  <default_input into="business_address">
    <generator type="address_generator"/>
  </default_input>

  <default_input into="industry">
    <generator type="industry_generator"/>
  </default_input>

  <default_input into="employees">
    <generator type="person">
      <input into="name">
        <generator type="name_generator"/>
      </input>
      <input into="address">
        <generator type="address_generator"/>
      </input>
      <input into="phone_number">
        <generator type="phone_number_generator"/>
      </input>
      <input into="email_address">
        <generator type="email_address"/>
      </input>
    </generator>
    <generator type="person">
      <input into="name">
        <generator type="name_generator"/>
      </input>
      <input into="address">
        <generator type="address_generator"/>
      </input>
      <input into="phone_number">
        <generator type="phone_number_generator"/>
      </input>
      <input into="email_address">
        <generator type="email_address"/>
      </input>
    </generator>
  </default_input>

  <default_input into="product_name">
    <generator type="application_name"/>
  </default_input>

  <default_input into="main_page_paragraph_content">
    <generator type="text_paragraph"/>
  </default_input>

  <conflict>
    <type>webapp</type>
  </conflict>

  <requires>
    <module_path>modules/services/unix/http/apache</module_path>
  </requires>

